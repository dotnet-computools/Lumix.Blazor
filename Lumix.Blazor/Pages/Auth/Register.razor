        position: relative;
        width: 100%;
        height: 100vh;
    }

    .position-image {
        position: absolute;
        transition: all 0.3s ease-in-out;
    }

    .first-image {
        top: 426px;
        left: 383px;
        z-index: 3;
    }

    .second-image {
        top: 171px;
        left: 265px;
        z-index: 2;
    }

    .third-image {
        top: 132px;
        left: 571px;
        z-index: 4;
    }
</style>


