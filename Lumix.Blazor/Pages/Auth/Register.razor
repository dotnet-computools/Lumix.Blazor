@page "/register"
@using Blazored.LocalStorage
@using Lumix.Blazor.Data
@using Lumix.Blazor.Services.IServices

<MudGrid Class="min-h-screen">
    <MudItem xs="12" sm="6" Class="flex justify-center items-center relative">
        <MudPaper Class="flex flex-col items-center justify-center space-y-6 mt-8 image-gallery" Style="box-shadow: none;">
            <MudImage @onmouseover="() => HandleImageHover(0)"
                     @onmouseout="() => HandleImageHoverEnd(0)"
                     Src="@(activeImages[0] ? "images/auth/morning-variant2.png" : "images/auth/inspiring-view-morning-light.png")"
                     Width="256"
                     Height="321"
                     Alt="Portrait 1"
                     Class="rounded-lg position-image first-image" />
            
            <MudImage @onmouseover="() => HandleImageHover(1)"
                     @onmouseout="() => HandleImageHoverEnd(1)"
                     Src="images/auth/handsome-young-man-with-nose-pierced-holding-sunflower-hand-against-grey-backdrop.png"
                     Width="@(activeImages[1] ? 261 : 230)"
                     Height="@(activeImages[1] ? 350 : 308)"
                     Alt="Portrait 2"
                     Class="rounded-lg position-image second-image" />
            
            <MudImage @onmouseover="() => HandleImageHover(2)"
                     @onmouseout="() => HandleImageHoverEnd(2)"
                     Src="@(activeImages[2] ? "images/auth/woman-variant2.png" : "images/auth/portrait-young-woman-with-natural-make-up.png")"
                     Width="240"
                     Height="360"
                     Alt="Portrait 3"
                     Class="rounded-lg position-image third-image" />
        </MudPaper>
    </MudItem>

    <MudItem xs="12" sm="6" Class="d-flex justify-center items-center registration-item">
        <MudPaper Class="pa-8 w-full max-w-md" Style="box-shadow: none;">
            <div class="text-center mb-8">
                <MudImage Src="images/logo/Group 31.png"></MudImage>
            </div>

            <MudForm @ref="Form" Model="RegisterDto">
                <MudTextField @bind-Value="RegisterDto.email"
                              Label="E-mail"
                              Variant="Variant.Outlined"
                              Class="mb-4"
                              Required="true"
                              RequiredError="Email is required"/>

                <MudTextField @bind-Value="RegisterDto.password"
                              Label="Пароль"
                              Variant="Variant.Outlined"
                              InputType="InputType.Password"
                              Class="mb-4"
                              Required="true"
                              RequiredError="Password is required"/>

                <MudTextField @bind-Value="RegisterDto.userName"
                              Label="Повне ім'я користувача"
                              Variant="Variant.Outlined"
                              Class="mb-6"
                              Required="true"
                              RequiredError="Full name is required"/>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <MudAlert Severity="Severity.Error" Class="mb-4">@ErrorMessage</MudAlert>
                }

                @if (success)
                {
                    <MudAlert Severity="Severity.Success" Class="mb-4">Успішний вхід!</MudAlert>
                }

                <MudButton Variant="Variant.Filled"
                           Style="background-color: #EE542F; color: white;"
                           FullWidth="true"
                           Size="Size.Large"
                           OnClick="CreateAccount"
                           Disabled="IsProcessing">
                    @if (IsProcessing)
                    {
                        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                        <MudText Class="ms-2">Обробка...</MudText>
                    }
                    else
                    {
                        <MudText>Увійти</MudText>
                    }
                </MudButton>
            </MudForm>
        </MudPaper>
    </MudItem>
</MudGrid>

